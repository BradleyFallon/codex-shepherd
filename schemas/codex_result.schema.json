{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "status",
    "files_changed",
    "tests_run",
    "notes"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "success",
        "failed",
        "blocked"
      ]
    },
    "files_changed": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tests_run": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string"
    }
  }
}
